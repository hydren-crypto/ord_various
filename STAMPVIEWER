<!DOCTYPE html>
<html>
<head>
	<title>Displaying JSON data on a website</title>
	<style>
		body {
			font-family: Arial, sans-serif;
			margin: 0;
			padding: 0;
		}
		h1 {
			margin: 20px;
		}
		.row {
			display: flex;
			flex-wrap: wrap;
			margin: 0 -10px;
		}
		.item {
			width: 25%;
			padding: 10px;
			box-sizing: border-box;
		}
		.item pre {
			white-space: pre-wrap;
			word-wrap: break-word;
			background-color: #f8f8f8;
			padding: 10px;
			border-radius: 5px;
			border: 1px solid #ccc;
			font-family: monospace;
			font-size: 14px;
			line-height: 1.5;
			margin: 10px 0;
		}
		.item img {
			display: block;
			margin: 10px auto;
			max-width: 100%;
			height: auto;
			object-fit: contain;
			image-rendering: pixelated;
			image-rendering: -moz-crisp-edges;
			image-rendering: crisp-edges;
			width: 210px;
			height: 210px;
		}
	</style>
</head>
<body>
	<h1>JSON Data</h1>
	<div id="data-container"></div>
	<script>
		fetch('https://cors-anywhere.herokuapp.com/http://hydren.io/stamps/stamp.json')
			.then(response => response.json())
			.then(data => {
				data.reverse().forEach((item, index) => {
					const dataContainer = document.getElementById('data-container');
					if (index % 4 === 0) {
						const row = document.createElement('div');
						row.classList.add('row');
						dataContainer.appendChild(row);
					}
					const row = dataContainer.lastChild;
					const itemContainer = document.createElement('div');
					itemContainer.classList.add('item');
					if (item.stamp_url) {
						const img = document.createElement('img');
						img.src = item.stamp_url;
						img.alt = `Stamp ${item.stamp}`;
						itemContainer.appendChild(img);
					}
					const jsonContainer = document.createElement('pre');
					jsonContainer.innerText = `"stamp": ${item.stamp}`;
					itemContainer.appendChild(jsonContainer);
					row.appendChild(itemContainer);
				});
			})
			.catch(error => console.error(error));
	</script>
</body>
</html>
